<div class="container">
  <div class="user-box">
    <h2 class="title-lg mb-sm mt-sm"><%= @user.name %></h2>
    <div class="mb">
      <%= render partial: 'users/user_avatar', locals: {user: @user} %>
    </div>
    <div class="user-box-line mb">
      <p class="text-bold mr"><%= display_nickname(@user) %></p>
      <% if current_user == @user %>
      <p class="">
        <%= link_to fa_icon('pencil'), edit_user_path(@user) %>
      </p>
      <% end %>
    </div>

  </div>

  <%= link_to 'Спроси меня', new_question_path(user_id: @user.id), class: 'button button-yellow mt-lg' %>

  <p class="mt">
    <%= render 'questions/form', question: @question %>
  </p>
</div>

<div class="container mt-sm">
  <h2 class="title-lg">
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container">
    <%= render question, question: @question %>
  </div>
<% end %>
